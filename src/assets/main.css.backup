@import './base.css';
@import 'bootstrap/dist/css/bootstrap.min.css';
@import 'bootstrap-icons/font/bootstrap-icons.css';
@import './fonts.css';

/* 本地像素风格字体定义 */
@font-face {
  font-family: 'Press Start 2P';
  font-style: normal;
  font-weight: 400;
  src: url('/assets/fonts/PressStart2P-Regular.woff2') format('woff2');
  font-display: swap;
}

@font-face {
  font-family: 'VT323';
  font-style: normal;
  font-weight: 400;
  src: url('/assets/fonts/VT323-Regular.woff2') format('woff2');
  font-display: swap;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

body {
  font-family: 'VT323', 'Courier New', monospace;
  font-size: 16px;
  line-height: 1.4;
  color: #e9ecef;
  background-color: #0a0a0a;
  image-rendering: pixelated;
  image-rendering: -moz-crisp-edges;
  image-rendering: crisp-edges;
}

/* 为中文内容优化字体显示 */
:lang(zh),
.has-chinese {
  font-family: 'VT323', 'ZCOOL KuaiLe', 'Courier New', monospace;
  letter-spacing: 1px;
}

/* 像素风格字体工具类 */
.pixel-font {
  font-family: 'Press Start 2P', 'Courier New', monospace;
  font-size: 12px;
  letter-spacing: 1px;
}

/* 中文像素字体工具类 */
.pixel-font-zh {
  font-family: 'ZCOOL KuaiLe', 'Press Start 2P', 'Courier New', monospace;
  font-size: 14px;
  letter-spacing: 1px;
}

/* 中英混合像素字体 */
.pixel-font-mixed {
  font-family: 'Press Start 2P', 'ZCOOL KuaiLe', 'VT323', 'Courier New', monospace;
  font-size: 12px;
  letter-spacing: 1px;
}

/* 像素边框样式 */
.pixel-border {
  border: 2px solid #4c6ef5;
  box-shadow:
    4px 4px 0 #3a5bd9,
    8px 8px 0 rgba(60, 91, 217, 0.3);
}

.pixel-border-inset {
  border: 2px solid #343a40;
  box-shadow:
    inset 2px 2px 0 #495057,
    inset -2px -2px 0 #212529;
}

/* 像素按钮样式 */
.pixel-btn {
  background: #4c6ef5;
  border: 2px solid #3a5bd9;
  color: white;
  font-family: 'Press Start 2P', 'Courier New', monospace;
  font-size: 10px;
  padding: 8px 12px;
  cursor: pointer;
  position: relative;
  transition: none;
  text-transform: uppercase;
}

/* 中文像素按钮 */
.pixel-btn-zh {
  background: #4c6ef5;
  border: 2px solid #3a5bd9;
  color: white;
  font-family: 'ZCOOL KuaiLe', 'Press Start 2P', 'Courier New', monospace;
  font-size: 12px;
  padding: 8px 12px;
  cursor: pointer;
  position: relative;
  transition: none;
  letter-spacing: 1px;
}

.pixel-btn:hover {
  background: #5a7ff5;
  transform: translate(-2px, -2px);
  box-shadow:
    2px 2px 0 #3a5bd9,
    4px 4px 0 rgba(58, 91, 217, 0.3);
}

.pixel-btn:active {
  transform: translate(0, 0);
  box-shadow: none;
}

/* 像素阴影效果 */
.pixel-shadow {
  box-shadow:
    6px 6px 0 #3a5bd9,
    12px 12px 0 rgba(58, 91, 217, 0.2);
}

/* 像素网格背景 */
.pixel-grid {
  background-image:
    repeating-linear-gradient(
      0deg,
      rgba(76, 110, 245, 0.1) 0px,
      transparent 1px,
      transparent 8px,
      rgba(76, 110, 245, 0.1) 9px
    ),
    repeating-linear-gradient(
      90deg,
      rgba(76, 110, 245, 0.1) 0px,
      transparent 1px,
      transparent 8px,
      rgba(76, 110, 245, 0.1) 9px
    );
}

/* 像素闪烁效果 */
@keyframes pixelBlink {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

.pixel-blink {
  animation: pixelBlink 2s ease-in-out infinite;
}

/* 像素故障效果 */
@keyframes pixelGlitch {
  0%, 100% { text-shadow: 2px 2px 0 #3a5bd9, -1px -1px 0 #4dabf7; }
  25% { text-shadow: -2px 2px 0 #3a5bd9, 1px -1px 0 #4dabf7; }
  50% { text-shadow: 2px -2px 0 #3a5bd9, -1px 1px 0 #4dabf7; }
  75% { text-shadow: -2px -2px 0 #3a5bd9, 1px 1px 0 #4dabf7; }
}

.pixel-glitch {
  animation: pixelGlitch 3s ease-in-out infinite;
}
  25% {
    text-shadow:
      -2px 2px 0 #3a5bd9,
      1px -1px 0 #4dabf7;
  }
  50% {
    text-shadow:
      2px -2px 0 #3a5bd9,
      -1px 1px 0 #4dabf7;
  }
  75% {
    text-shadow:
      -2px -2px 0 #3a5bd9,
      1px 1px 0 #4dabf7;
  }
}

.pixel-glitch {
  animation: pixelGlitch 3s ease-in-out infinite;
}

/* 像素输入框样式 */
input,
textarea,
select {
  font-family: 'VT323', 'Courier New', monospace;
  font-size: 16px;
  background: #1a1a1a;
  border: 2px solid #343a40;
  color: #e9ecef;
  padding: 8px 12px;
  image-rendering: pixelated;
  transition: none;
  font-display: swap;
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: #4c6ef5;
  box-shadow:
    0 0 0 2px rgba(76, 110, 245, 0.3),
    4px 4px 0 #3a5bd9,
    8px 8px 0 rgba(58, 91, 217, 0.2);
  transform: translate(-2px, -2px);
}

/* 中文输入框样式 */
input.zh,
textarea.zh,
select.zh {
  font-family: 'VT323', 'ZCOOL KuaiLe', 'Courier New', monospace;
  letter-spacing: 1px;
}

/* 字体加载状态 */
.font-loading {
  font-family: 'Courier New', monospace;
}

.font-loaded {
  font-family: 'Press Start 2P', 'VT323', 'Courier New', monospace;
}

input:focus,
textarea:focus,
select:focus {
  outline: none;
  border-color: #4c6ef5;
  box-shadow:
    0 0 0 2px rgba(76, 110, 245, 0.3),
    4px 4px 0 #3a5bd9,
    8px 8px 0 rgba(58, 91, 217, 0.2);
  transform: translate(-2px, -2px);
}

#app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

a {
  color: #4dabf7;
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: #74c0fc;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.card {
  border: 2px solid #4c6ef5;
  background-color: #1a1a1a;
  image-rendering: pixelated;
  transition: none;
  position: relative;
}

.card:hover {
  transform: translate(-4px, -4px);
  box-shadow:
    4px 4px 0 #3a5bd9,
    8px 8px 0 rgba(58, 91, 217, 0.3);
}

.btn {
  border-radius: 8px;
  padding: 8px 16px;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-primary {
  background: #4c6ef5;
  border: 2px solid #3a5bd9;
  color: #ffffff;
  font-family: 'Press Start 2P', 'Courier New', monospace;
  font-size: 10px;
  text-transform: uppercase;
  letter-spacing: 1px;
  image-rendering: pixelated;
  transition: none;
  font-display: swap;
}

/* 中文按钮样式 */
.btn-primary-zh {
  background: #4c6ef5;
  border: 2px solid #3a5bd9;
  color: #ffffff;
  font-family: 'ZCOOL KuaiLe', 'Courier New', monospace;
  font-size: 12px;
  letter-spacing: 1px;
  image-rendering: pixelated;
  transition: none;
  font-display: swap;
}

.btn-primary:hover {
  transform: translate(-4px, -4px);
  box-shadow:
    4px 4px 0 #3a5bd9,
    8px 8px 0 rgba(58, 91, 217, 0.3);
}

/* 自定义滚动条 */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #1a1a1a;
}

::-webkit-scrollbar-thumb {
  background: #495057;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #6c757d;
}

/* Flex utility classes */
.flex-fill {
  flex: 1 1 auto;
}

/* Grid background classes */
.grid-bg {
  transition: none;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.grid-bg-default {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
  position: relative;
}

.grid-bg-default::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image:
    repeating-linear-gradient(
      0deg,
      rgba(76, 110, 245, 0.1) 0px,
      transparent 1px,
      transparent 8px,
      rgba(76, 110, 245, 0.1) 9px
    ),
    repeating-linear-gradient(
      90deg,
      rgba(76, 110, 245, 0.1) 0px,
      transparent 1px,
      transparent 8px,
      rgba(76, 110, 245, 0.1) 9px
    );
  pointer-events: none;
  z-index: 0;
}

/* 响应式优化 */
@media (max-width: 768px) {
  body {
    font-size: 14px;
  }

  .container {
    padding: 0 15px;
  }

  /* 移动端像素风格调整 */
  .pixel-font {
    font-size: 10px;
  }

  .pixel-btn {
    font-size: 8px;
    padding: 6px 8px;
  }

  .pixel-border {
    box-shadow:
      2px 2px 0 #3a5bd9,
      4px 4px 0 rgba(60, 91, 217, 0.3);
  }

  .pixel-shadow {
    box-shadow:
      3px 3px 0 #3a5bd9,
      6px 6px 0 rgba(58, 91, 217, 0.2);
  }
}

@media (max-width: 480px) {
  body {
    font-size: 12px;
  }

  .pixel-font {
    font-size: 8px;
    letter-spacing: 0.5px;
  }

  .pixel-btn {
    font-size: 7px;
    padding: 4px 6px;
  }
}
